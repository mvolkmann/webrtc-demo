{
  "name": "webrtc-demo-server",
  "version": "1.0.0",
  "description": "server to demonstrate using WebRTC",
  "scripts": {
    "db-reset": "sqlite3 webrtc.db < schema.txt",
    "format": "prettier --write '*.js'",
    "lint": "eslint --fix --quiet . --ext .js",
    "ngrok": "ngrok http http://localhost:1234",
    "reinstall": "rm -rf node_modules package-lock.json && npm install",
    "start": "nodemon server.js"
  },
  "author": "R. Mark Volkmann",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "cors": "^2.8.5",
    "eslint": "^7.26.0",
    "express": "^4.17.1",
    "peer": "^0.6.1",
    "peerjs": "^1.3.2",
    "prettier": "^2.3.0",
    "sqlite3": "^5.0.2",
    "ws": "^7.4.5"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
